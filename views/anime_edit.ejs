<%- include("partials/header") %>
    <div class="container">
        <h1>Edit Anime</h1>
        <form action="/anime/<%= anime._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" value="<%= anime.title%>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" name="description" value="<%= anime.description%>">
            </div>
            <div class="form-group">
                <label for="writer">Writer</label>
                <input type="text" class="form-control" name="writer" value="<%= anime.writer%>">
            </div>
            <div class="form-group">
                <label for="studio">Studio</label>
                <input type="text" class="form-control" name="studio" value="<%= anime.studio%>">
            </div>
            <div class="form-group">
                <label for="seasons">Number of Seasons</label>
                <input type="number" class="form-control" name="seasons" value="<%= anime.seasons%>">
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <select name="genre" id="genre" class="form-control">
                    <option disabled> -- Choose Below -- </option>
                    <option <%= anime.genre === "romance" ? "selected" : "" %> >Romance</option>
                    <option <%= anime.genre === "comedy" ? "selected" : "" %> >Comedy</option>
                    <option <%= anime.genre === "seinen" ? "selected" : "" %> >Seinen</option>
                    <option <%= anime.genre === "isekai" ? "selected" : "" %> >Isekai</option>
                    <option <%= anime.genre === "mecha" ? "selected" : "" %> >Mecha</option>
                    <option <%= anime.genre === "sports" ? "selected" : "" %> >Sports</option>
                    <option <%= anime.genre === "psychological" ? "selected" : "" %> >Psychological</option>
                    <option <%= anime.genre === "horror" ? "selected" : "" %> >Horror</option>
                    <option <%= anime.genre === "adventure" ? "selected" : "" %> >Adventure</option>
                    <option <%= anime.genre === "scifi" ? "selected" : "" %> >SciFi</option>
                    <option <%= anime.genre === "slice-of-life" ? "selected" : "" %> >Slice-of-Life</option>
                    <option <%= anime.genre === "shoujo" ? "selected" : "" %> >Shoujo</option>
                    <option <%= anime.genre === "shonen" ? "selected" : "" %> >Shonen</option>

                </select>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" name="storyCompleted" class="form-check-input" value="<%= anime.storyCompleted%>" <%= anime.storyCompleted ? "checked" : "" %>
                <label for="storyCompleted">Story Completed?</label>
            </div>
            <div class="form-group">
                <label for="releaseDate">Release Date</label>
                <input type="date" class="form-control" name="releaseDate" value="<%= anime.releaseDate.toISOString().split('T')[0] %>">
            </div>
            <div class="form-group">
                <label for="image">Link to Image</label>
                <input type="url" class="form-control" name="image" value="<%= anime.image%>">
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<%- include("partials/footer") %>