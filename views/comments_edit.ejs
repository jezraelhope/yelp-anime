<%- include('partials/header') %>

<div class="container">
    <h1>Edit Comment</h1>
    <form action="/anime/<%= anime._id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="text">Comment Text</label>
            <textarea name="text" rows="8" cols="80" id="text" class="form-control" placeholder="Comment text here..." required><%= comment.text%></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('partials/footer') %>